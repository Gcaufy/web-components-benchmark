{
  "name": "dojo2-todo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-todo-app": "npx dojo build widget --mode dev",
    "build": "npm run build-todo-app",
    "concat-js": "npx concat-cli -f output/dev/**/*.js -o output/dev/bundle.js",
    "concat-css": "npx concat-cli -f output/dev/**/*.css -o output/dev/bundle.css",
    "minify-js": "npx google-closure-compiler --warning_level=QUIET --language_out=ECMASCRIPT_2015 --js=output/dev/bundle.js --js_output_file=output/dev/bundle.min.js",
    "minify-css": "npx uglifycss output/dev/bundle.css --output output/dev/bundle.min.css",
    "postbuild": "cp src/index.html output && npm run concat-js && npm run minify-js && npm run concat-css&& npm run minify-css"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dojo/core": "^2.0.0",
    "@dojo/has": "^2.0.0",
    "@dojo/i18n": "^2.0.0",
    "@dojo/widget-core": "^2.0.0",
    "@dojo/widgets": "^4.0.1"
  },
  "devDependencies": {
    "@dojo/cli": "^4.0.0",
    "@dojo/cli-build-widget": "^4.0.0",
    "@dojo/loader": "^2.0.0",
    "@dojo/webpack-contrib": "^4.0.2",
    "css-loader": "^1.0.1",
    "file-loader": "^2.0.0",
    "imports-loader": "^0.8.0",
    "json-css-module-loader": "^1.0.2",
    "postcss-loader": "^3.0.0",
    "source-map-loader-cli": "0.0.1",
    "style-loader": "^0.23.1",
    "typescript": "^3.1.6",
    "umd-compat-loader": "^2.1.1"
  }
}