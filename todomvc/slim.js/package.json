{
    "name": "native-shadow-dom-slim.js",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "minify-html": "./node_modules/.bin/html-minifier index.dist.html -o dist/index.html --collapse-whitespace --remove-comments",
        "copy-js": "cp js/* dist && cp ./node_modules/slim-js/Slim.min.js dist",
        "concat-js": "./node_modules/.bin/concat-cli -f dist/Slim.min.js dist/todo-input.js dist/todo-item.js dist/my-todo.js -o dist/bundle_tmp.js",
        "minify-js": "./node_modules/.bin/uglifyjs dist/bundle.js -o dist/bundle.js",
        "rollup": "rollup -c",
        "prebuild": "rm -rf dist/*",
        "build": "npm run minify-html && npm run copy-js && npm run concat-js && npm run rollup && npm run minify-js"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concat-cli": "^4.0.0",
        "html-minifier": "^3.5.8",
        "rollup": "^0.56.2",
        "uglify-es": "^3.3.9"
    },
    "dependencies": {
        "slim-js": "^3.2.7"
    }
}
