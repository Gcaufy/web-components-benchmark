  "devDependencies": {
    "chromedriver": "^2.34.1",
    "devtools-timeline-model": "^1.4.0",
    "fs-extra": "^5.0.0",
    "http-server": "^0.11.1",
    "nightwatch": "^0.9.19",
    "puppeteer": "^1.0.0",
    "selenium-server-standalone-jar": "^3.8.1"
  }
