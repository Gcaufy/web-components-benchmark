{
  "name": "wc-polymer-stencil-todo",
  "version": "1.0.0",
  "description": "Comparison on how to update DOM, pass attributes/properties and dispatch/listen to events with Web Components",
  "scripts": {
    "test": "nightwatch",
    "serve": "http-server .",
    "benchmark-page-load": "node benchmarks/benchmark_page-load.js",
    "benchmark-create-todos": "node benchmarks/benchmark_create-todos.js",
    "deploy": "firebase deploy && firebase open hosting:site",
    "build:polymer": "cd polymer && polymer build",
    "build:angular": "cd angular-elements && npm run build",
    "build:stencil": "cd stencil && npm run build",
    "build:vue": "cd vue-todo && npm run build",
    "build:all": "npm run build:polymer && npm run build:angular && npm run build:stencil && npm run build:vue"
  },
  "repository": {
    "type": "git",
