{
  "name": "web-components-benchmark",
  "version": "1.0.0",
  "description": "Web Components implementations benchmark",
  "scripts": {
    "postinstall": "cd angular-elements && npm i && cd ../native-shadow-dom && npm i && cd ../stencil && npm i && cd ../vue.js && npm i",
    "serve": "http-server .",
    "benchmark-page-load": "node benchmarks/benchmark_page-load.js",
    "benchmark-create-todos": "node benchmarks/benchmark_create-todos.js",
    "benchmark-delete-todos": "node benchmarks/benchmark_delete-todos.js",
    "build:polymer": "cd polymer && polymer build",
    "build:native": "cd native-shadow-dom && npm run build",
    "build:angular": "cd angular-elements && npm run build",
    "build:stencil": "cd stencil && npm run build",
    "build:vue": "cd vue.js && npm run build",
    "build:all": "npm run build:native && npm run build:polymer && npm run build:angular && npm run build:stencil && npm run build:vue"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vogloblinsky/web-components-benchmark.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vogloblinsky/web-components-benchmark/issues"
  },
  "homepage": "https://github.com/vogloblinsky/web-components-benchmark#readme",
  "devDependencies": {
    "devtools-timeline-model": "^1.4.0",
    "fs-extra": "^5.0.0",
    "http-server": "^0.11.1",
    "puppeteer": "^1.0.0"
  }
}
