{
    "name": "polymer3",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "flat": true,
    "scripts": {
        "prebuild": "rm -rf build/",
        "build": "npm run build-es6 && npm run minify-es6",
        "build-es6": "rollup -c rollup.config.js",
        "postbuild-es6": "cp index.html build/",
        "preminify-es6": "mkdir build/src",
        "minify-es6": "uglifyjs build/src_tmp/index.js -o build/src/index.js -c -m",
        "postminify-es6": "rm -rf build/src_tmp"
    },
    "dependencies": {
        "@polymer/polymer": "^3.0.2",
        "@webcomponents/webcomponentsjs": "^1.2.0"
    },
    "devDependencies": {
        "rollup": "^0.58.2",
        "rollup-plugin-node-resolve": "^3.3.0",
        "uglify-es": "^3.3.9"
    }
}
