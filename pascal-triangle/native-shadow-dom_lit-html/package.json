{
    "name": "native-shadow-dom-lit-html",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "minify-html": "npx html-minifier index.dist.html -o dist/index.html --collapse-whitespace --remove-comments",
        "copy-js": "cp js/* dist",
        "clean-js": "replace \"import { html, render } from '../node_modules/lit-html/lib/lit-extended.js';\" \"\" dist/app.js",
        "concat-js": "npx concat-cli -f dist/triangle-item.js dist/app.js -o dist/bundle_tmp.js",
        "minify-js": "npx uglifyjs dist/bundle.js -o dist/bundle.js",
        "rollup": "rollup -c",
        "prebuild": "rm -rf dist/*",
        "build": "npm run minify-html && npm run copy-js && npm run clean-js && npm run concat-js && npm run rollup && npm run minify-js"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concat-cli": "^4.0.0",
        "html-minifier": "^3.5.21",
        "replace": "^1.0.1",
        "rollup": "^0.68.0",
        "uglify-es": "3.3.9"
    },
    "dependencies": {
        "lit-html": "^0.14.0"
    }
}